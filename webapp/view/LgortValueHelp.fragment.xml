<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="暂无数据"
		title="选择仓库"
		liveChange=".handleSearch1"
		confirm=".handleValueHelpClose1"
		cancel=".handleValueHelpClose1"
        showClearButton="true"
		items="{
			path : '/ZSY_SH_T001LSHSet',
			sorter : {
				path : 'Lgort',
				descending : false
			}
		}">
        <ColumnListItem selected="{selected}">
            <cells>
                <Text text="{Lgort}" />
                <Text text="{Lgobe}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="12em">
                <header>
                    <Text text="仓库" />
                </header>
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
                <header>
                    <Text text="仓库描述" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>